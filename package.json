{
  "name": "vite-plugin-specifier",
  "version": "2.0.0",
  "description": "Vite plugin to update your ESM and CJS specifiers.",
  "type": "module",
  "main": "dist",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "types": "./dist/cjs/index.d.cts",
  "engines": {
    "node": ">=22.21.1"
  },
  "scripts": {
    "prettier": "prettier -w {src,test}/*",
    "lint": "eslint . src --ext .ts",
    "test": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --no-warnings --import tsx --test --test-reporter=spec test/*.ts",
    "prebuild": "rm -rf ./dist",
    "build": "duel",
    "types-check": "tsc --noEmit",
    "prepack": "npm run build"
  },
  "keywords": [
    "vite-plugin",
    "rollup-plugin",
    "specifiers",
    "esm",
    "cjs",
    ".d.ts",
    "rename",
    "extensions",
    "writeBundle",
    "transform"
  ],
  "files": [
    "dist"
  ],
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/morganney/vite-plugin-specifier.git"
  },
  "bugs": {
    "url": "https://github.com/morganney/vite-plugin-specifier/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@knighted/duel": "^4.0.0",
    "@types/node": "^25.2.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.2.4",
    "rollup": "^4.57.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@knighted/specifier": "^2.0.9",
    "glob": "^13.0.1"
  },
  "peerDependencies": {
    "vite": ">=7.3.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
